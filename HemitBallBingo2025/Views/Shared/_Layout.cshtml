@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - HEMIT-Ballbingo</title>

    <!-- Bootstrap CSS -->

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome CSS -->
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <style type="text/css">
        .miny {
            font-family: 'Segoe UI', Arial, sans-serif;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .nav-link.active {
            font-weight: bold;
            color: #ffc107 !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">
            <a class="navbar">
                <i class="fa-solid fa-bingo"></i> 🎱 HEMIT-Ballbingo
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a href="~/Lottery">
                            <i class="fa-solid fa-ticket"></i> Lotteri
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link noopener norefferer"><i class="fa-solid fa-clock-rotate-left"></i> Historikk </a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Admin/Prizes"><i class="fa-solid fa-gift"></i> Premier</a>
                    </li>
                    <li class="nav-item">
                        <a href="Admin/Index"><i class="fa-solid fa-user-shield"></i> Admin</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="bg-light text-center py-4 mb-4 shadow-sm">
        <h1 class="display-4">Velkommen til HEMIT-Ballbingo 🎉</h1>
        <p class="lead">Registrer lodd, følg trekninger og se hvem som vinner de store premiene!</p>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <!-- jQuery unobtrusive scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquerybtrusive.min.js"></script>


    <!-- Bootstrap Bundle (inkluderer Popper) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

  @*   <partial name="_ValidationScriptsPartial"></partial> *@

    @RenderSection("Scripts", required: false)

</body>
</html>